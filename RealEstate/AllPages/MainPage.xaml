<Page x:Class="RealEstate.AllPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealEstate.AllPages"
      mc:Ignorable="d"
      Title="Меню" Height="auto" Width="auto">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Button x:Name="ClientAddButton" Click="ClientAddButton_OnClick" Width="150" Height="30" Content="Добавить клиента" Margin="10"/>
                    <Button x:Name="ClientViewButton" Click="ClientViewButton_OnClick" Width="150" Height="30" Content="Просмотреть клиентов" Margin="10"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Button x:Name="RealtorAddButton" Click="RealtorAddButton_OnClick" Width="150" Height="30" Content="Добавить риэлтора" Margin="10"/>
                    <Button x:Name="RealtorViewButton" Click="RealtorViewButton_OnClick" Width="150" Height="30" Content="Просмотреть риэлторов" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>